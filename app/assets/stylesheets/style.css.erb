@import url(reset.css);
@import url(font.css);
body {
  background-color: #F2F2F2;
  color: #5A5A5A;
  font-size: normal; }

strong {
  font-weight: bold; }

.bigger {
  font-size: 110%; }

.red {
  color: #FF4040; }

.alignright {
  text-align: right; }

a {
  color: #5A5A5A;
  text-decoration: none; }
  a:hover {
    color: #8A8A8A; }
  a:visited {
    color: #5A5A5A; }

dl.structure dt {
  float: left; }
dl.structure dd {
  float: left; }
dl.structure dt.post {
  line-height: 3.0em;
  width: 130px; }
dl.structure dd.company {
