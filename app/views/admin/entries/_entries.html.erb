<table class="table table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th>申込日</th>
      <th>会社名</th>
      <th>部署・役職名</th>
      <th>名前</th>
      <th>電話番号</th>
      <th>メールアドレス</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%- @entries.each do |entry| -%>
      <tr id="entry-<%= entry.id %>">
      <td><%= entry.updated_at.strftime("%Y/%m/%d") %></td>
      <td><%= entry.company %></td>
      <td><%= entry.division %><%= ",  " if entry.division.present? %><%= entry.position %></td>
      <td><%= entry.name %></td>
      <td><%= entry.phone %></td>
      <td><%= mail_to entry.email, entry.email %></td>
      <td style="text-align:center;">
        <%- if false -%>
        <%= link_to "詳細", admin_forum_entry_path(@event, entry), :class => "btn btn-mini btn-info"%>
        <%- end -%>
        <%= link_to "編集", edit_admin_forum_entry_path(@event, entry), :class => "btn btn-mini btn-success"%>
        <%= link_to "削除", "#", :class => "delete_entry btn btn-mini btn-danger", :"data-id" => entry.id, :"data-toggle" => "modal", :"data-target" => "#delete_confirm_modal", :"data-event_id" => @event.id %>
      </td>
    </tr>
    <%- end -%>
  </tbody>
</table>

