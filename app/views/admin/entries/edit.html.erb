<h2>申し込み編集</h2>

<%= simple_form_for [:admin, @event, @entry], url: admin_forum_entry_path(@event, @entry),  :html => { :class => 'form-horizontal'} do |f| %>
  <%= f.input :name %>
  <%= f.input(:company) %>
  <%= f.input(:division) %>
  <%= f.input(:position) %>
  <%= f.input(:address) %>
  <%= f.input(:phone) %>
  <%= f.input(:email) %>
  <%= f.input(:entry_type, include_blank: false) %>
  <%= f.input(:entry_table_talk, inline_label: '申し込む') %>
  <%= f.input(:intermediary) %>

  <span style="margin-left: 10px;">
    <%= f.submit "保存" %>
  </span>
<%- end -%>
