<%- unless flash.blank? -%>
<div id="flash-message">
  <%- flash.each do |type, message| -%>
  <div class="alert fade in <%= twitterized_type(type) %>">
    <a class="close" data-dismiss="alert">Ã—</a>
    <%= message %>
  </div>
  <%- end -%>
</div>
<%- end -%>

<%- content_for :after_script do -%>
<%= javascript_tag "
    $(document).ready(function(){
      $('#flash-message').oneTime(3000, function(){
        $('#flash-message .alert-info').alert('close');
      })
    });
"%>
<%- end -%>